def check_even_odd():
    try:
        # 사용자로부터 숫자를 입력받음
        number = int(input("숫자를 입력하세요: "))

        # 홀수인지 짝수인지 확인
        if number % 2 == 0:
            print(f"{number}는 짝수입니다.")
        else:
            print(f"{number}는 홀수입니다.")
    except ValueError:
        print("유효한 숫자를 입력하세요.")

if __name__ == "__main__":
    check_even_odd()
